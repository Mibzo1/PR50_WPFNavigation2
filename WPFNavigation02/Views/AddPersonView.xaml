<UserControl
    x:Class="WPFNavigation02.Views.AddPersonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFNavigation02.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            Width="120"
            Margin="175,169,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding FirstName}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="173,148,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="First Name"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="347,148,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Last Name"
            TextWrapping="Wrap" />
        <TextBox
            Width="120"
            Margin="347,169,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding LastName}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="512,148,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Age "
            TextWrapping="Wrap" />
        <TextBox
            Width="120"
            Margin="510,168,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Age}"
            TextWrapping="Wrap" />
        <Button
            Width="82"
            Height="32"
            Margin="268,225,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Add Person"
            Command="{Binding AddPersonCommand}"/>
        <Button
            Width="82"
            Height="32"
            Margin="390,225,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding NavigatePersonListViewCommand}"
            Content="Cancel" />

    </Grid>
</UserControl>
